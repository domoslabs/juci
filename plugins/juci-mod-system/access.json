{
	"juci-mod-system": {
		"description": "JUCI system module",
		"read": {
			"owsd": [
				"defaultreset"
			],
			"ubus": {
				"session": [
					"list"
				],
				"juci.system": [
					"defaultreset", 
					"reboot",
					"listusers",
					"zonelist",
					"led_status"
				], 
				"router.system": [
					"info",
					"memory_bank",
					"password_set",
					"fs",
					"processes"
				],
				"system": [
					"info",
					"board"
				]

			},
			"uci": [
				"system",
				"buttons",
				"leds",
				"passwords"
			]
		},
		"write": {
			"passwd": [ "self" ],
			"uci": [
				"system",
				"buttons",
				"passwords",
				"leds"
			]
		}
	},
	"juci-mod-system-file": {
		"description": "Allow file read/write to tmp",
		"read": {
			"ubus": {
				"juci.file": [
					"read",
					"write"
				]
			}
		}
	},
	"juci-mod-system-backup": {
		"description": "Allow creating and restoring backups",
		"read": {
			"ubus": {
				"juci.sysupgrade": [
					"create-backup",
					"restore-backup",
					"features"
				]
			}
		}
	},
	"juci-mod-system-upgrade": {
		"description": "Allow firmware upgrade",
		"read": {
			"ubus": {
				"juci.sysupgrade": [
					"check",
					"test",
					"start"
				]
			}
		}
	},
	"juci-mod-system-service": {
		"description": "Allow managing services",
		"read": {
			"ubus": {
				"juci.service": [
					"list",
					"start",
					"stop",
					"enable",
					"disable",
					"reload"
				]
			}
		}
	},
	"juci-mod-system-admin": {
		"read": {
			"uci": [
				"rpcd",
				"juci"
			]
		},
		"write": {
			"passwd": [ "otheruser" ],
			"uci": [
				"juci"
			]
		}
	}
}
